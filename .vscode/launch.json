    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/dylan/otmap.git/fast_caustic_design/build/caustic_design", // Path to your compiled executable
            "args": [
                "-in_src",
                "/home/dylan/otmap.git/fast_caustic_design/data/source.png",
                "-in_trg",
                "/home/dylan/otmap.git/fast_caustic_design/data/face3.png",
                "-res",
                "100",
                "-focal_l",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Working directory
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Ensure the build task runs before debugging
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}